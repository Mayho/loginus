extends reset-layout
block content
  div(ng-controller="ResetController")
    form#reset(ng-submit="reset(inputs)")
      div(ng-if="submitted")
        input(type="hidden", value="#{reset_code}")
        .form-group
          label.control-label New Password
          input(type="password", required="" ng-model="login.password", name="password" , class="form-control")
        .form-group
          label.control-label Confirm New Password
          input(type="password", required="" ng-model="login.password", name="password" , class="form-control")
        .form-group
          input.btn.btn-default(type="submit")
      div(ng-if="!submitted")
        a(href="/") Password reset, return to login.




